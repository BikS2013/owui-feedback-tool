PORT=3001
HOST=localhost

# CORS Configuration
# Option 1: Single origin (for backward compatibility)
# CORS_ORIGIN=http://localhost:5173

# Option 2: Multiple origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Option 3: Allow all origins (use with caution)
# CORS_ORIGINS=*

NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=feedback_db
DB_USER=postgres
DB_PASSWORD=postgres

# Agent Database Configuration (if different from main DB)
AGENT_DB_HOST=localhost
AGENT_DB_PORT=5432
AGENT_DB_NAME=agent_db
AGENT_DB_USER=postgres
AGENT_DB_PASSWORD=postgres

# LLM API Keys (optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# GitHub Integration
# Repository in format: owner/repo (e.g., facebook/react)
GITHUB_REPO=owner/repository

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos only)
# For public repositories, you can omit this for limited API calls
GITHUB_TOKEN=

# GitHub API Base URL
# Useful for GitHub Enterprise or custom GitHub instances
# Default: https://api.github.com
GITHUB_API_URL=https://api.github.com